.more-link
	text-align center
	&__a
		position relative
		display inline-block
		font-os-condlight(18px,20px)
		text-transform uppercase
		text-decoration none
		&:hover
			text-decoration underline
	
		&:before,			
		&:after
			content ""
			position absolute
			top 50%
			margin-top -1px
			width 20px
			height 1px
		&:before
			left -30px
		&:after
			right -30px
		&_style-1
			color $color-logo
			&:before,
			&:after
				background-color $color-logo 
		&_style-2
			color $color-white
			&:before,
			&:after
				background-color $color-white 
			